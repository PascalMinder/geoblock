{
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "[go]": {
      "editor.tabSize": 4,
      "editor.detectIndentation": false,
      "editor.snippetSuggestions": "none",
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        "source.organizeImports": true
      }
    },
    "go.autocompleteUnimportedPackages": true,
    "go.formatTool": "goimports",
    "go.lintTool": "golangci-lint",
    "go.buildOnSave": "workspace",
    "go.lintOnSave": "workspace",
    "go.vetOnSave": "package",
    "gopls": {
      "usePlaceholders": true, // add parameter placeholders when completing a function
      // Experimental settings
      "completeUnimported": true, // autocomplete unimported packages
      "deepCompletion": true // enable deep completion
    },
    "go.useLanguageServer": true,
    "go.alternateTools": {
      "go": "${workspaceFolder}/../build/ext/bin/go"
    },
    "terminal.integrated.env.linux": {
      "PATH": "${workspaceFolder}/../build/ext/bin/:${env:PATH}"
    },
    "shellcheck.executablePath": "${workspaceFolder}/../build/ext/bin/shellcheck",
    "cmake.configureOnOpen": false,
    "cSpell.customDictionaries": {
      "custom-dictionary-workspace": {
        "name": "custom-dictionary-workspace",
        "path": "${workspaceFolder:geoblock}/.cspell/custom-dictionary-workspace.txt",
        "addWords": true,
        "scope": "workspace"
      }
    },
    "cSpell.words": [
      "geoblock"
    ]
  }